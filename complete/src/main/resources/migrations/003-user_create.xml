<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="1" author="Ivo">
        <createTable tableName="user">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="username" type="varchar(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="Ivo">
        <addColumn tableName="country">
            <column name="owner_id" type="bigint"/>
        </addColumn>
        <addForeignKeyConstraint baseTableName="country"
                                 baseColumnNames="owner_id"
                                 constraintName="fk_account_owner"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="3" author="Ivo">
        <createTable tableName="user_accounts">
            <column name="users_id" type="bigint">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="accounts_id" type="bigint">
                <constraints primaryKey="true" nullable="false" />
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="user_accounts"
                                 baseColumnNames="users_id"
                                 constraintName="fk_account_users_user"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="user_accounts"
                                    baseColumnNames="accounts_id"
                                    constraintName="fk_account_users_account"
                                    referencedTableName="country"
                                    referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>